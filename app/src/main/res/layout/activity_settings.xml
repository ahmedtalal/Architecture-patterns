<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:orientation="vertical"
    android:background="@drawable/images"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/round_spladhscreen"
        android:alpha="0.8"
        >

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Settings"
            android:id="@+id/settingToolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:layoutAnimation="@anim/layout_animation_up"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/profilePhotoSettingPage"
                    app:civ_border_color="#FFFF"
                    app:civ_border_width="2dp"
                    android:src="@drawable/ic_user"
                    android:elevation="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="185dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="15dp"
                        android:elevation="10dp"
                        >

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="@style/RippleStylePrimary"
                            android:id="@+id/aboutRipple"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                >

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="3"
                                    android:src="@drawable/about_us"
                                    android:scaleType="centerCrop"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="About Us"
                                    android:textSize="16sp"
                                    android:gravity="center"
                                    android:background="#18534E"
                                    android:textColor="#FFFF"
                                    />


                            </LinearLayout>


                        </com.balysv.materialripple.MaterialRippleLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="185dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="15dp"
                        android:elevation="10dp"
                        >

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="@style/RippleStylePrimary"
                            android:id="@+id/privacyRipple"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                >

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="3"
                                    android:src="@drawable/privacypolicy"
                                    android:scaleType="centerCrop"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="privacy policies"
                                    android:textSize="16sp"
                                    android:gravity="center"
                                    android:background="#18534E"
                                    android:textColor="#FFFF"
                                    />


                            </LinearLayout>


                        </com.balysv.materialripple.MaterialRippleLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="185dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="15dp"
                        android:elevation="10dp"
                        >

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="@style/RippleStylePrimary"
                            android:id="@+id/faqsRipple"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                >

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="3"
                                    android:src="@drawable/ic_faqs"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="FAQS"
                                    android:textSize="16sp"
                                    android:gravity="center"
                                    android:background="#18534E"
                                    android:textColor="#FFFF"
                                    />


                            </LinearLayout>


                        </com.balysv.materialripple.MaterialRippleLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="185dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="15dp"
                        android:elevation="10dp"
                        >

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="@style/RippleStylePrimary"
                            android:id="@+id/passwordRippple"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                >

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="3"
                                    android:src="@drawable/forgot"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Forget Password"
                                    android:textSize="16sp"
                                    android:gravity="center"
                                    android:background="#18534E"
                                    android:textColor="#FFFF"
                                    />


                            </LinearLayout>


                        </com.balysv.materialripple.MaterialRippleLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>


    </LinearLayout>


</LinearLayout>