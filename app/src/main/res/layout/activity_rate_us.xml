<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RateUsActivity"
    android:background="@drawable/images"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/round_spladhscreen"
        android:alpha="0.8"
        >

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Rate Us"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:id="@+id/ratepage"
            />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:orientation="vertical"
                android:layoutAnimation="@anim/layout_animation_up"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How much do you love us ?"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:fontFamily="monospace"
                    android:padding="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#FFFF"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="We give you 5 star for trying to learn. How are we doing helping you?"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:fontFamily="monospace"
                    android:padding="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="25dp"
                    android:textColorHint="#FFFF"
                    />

                <RatingBar
                    android:id="@+id/rate_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:progressTint="#00B557"
                    android:layout_marginBottom="20dp"
                    android:progressBackgroundTint="#FFFF"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/round_textsplash"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginBottom="12dp"
                    android:elevation="15dp"
                    >

                    <Button
                        android:id="@+id/rateBtn_ID"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/round_textsplash"
                        android:text="Submit"
                        android:textSize="18sp"
                        android:textColor="#FFF"
                        android:fontFamily="monospace"
                        android:textStyle="bold"
                        android:elevation="12dp"
                        android:textAllCaps="false"
                        />

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>


    </LinearLayout>


</LinearLayout>