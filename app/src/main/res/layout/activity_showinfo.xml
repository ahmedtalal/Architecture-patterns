<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowinfoActivity"
    android:background="@drawable/images"
    >

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:id="@+id/collapsing_ID"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:id="@+id/imageUri_id"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    android:alpha="0.5"
                    />

                <android.support.v7.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:id="@+id/toolbar"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:layout_collapseMode="pin"
                    />

                <ProgressBar
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/progoBar"
                    android:layout_gravity="center"
                    />

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:fillViewport="true"
            android:background="@drawable/round_spladhscreen"
            android:alpha="0.8"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:scrollbars="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="15dp"
                    >

                    <TextView
                        android:id="@+id/titleID"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:text="Title"
                        android:textSize="18sp"
                        android:textColor="#FFFF"
                        android:textStyle="bold"
                        android:padding="6dp"
                        android:fontFamily="monospace"
                        />

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.6"
                        android:text="العنوان :"
                        android:textSize="16sp"
                        android:textColor="#FFFF"
                        android:padding="6dp"
                        android:fontFamily="monospace"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="15dp"
                    >

                    <TextView
                        android:id="@+id/descriptionID"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:text="description"
                        android:textSize="18sp"
                        android:textColor="#FFFF"
                        android:textStyle="bold"
                        android:padding="6dp"
                        android:fontFamily="monospace"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.6"
                        android:text="المقال :"
                        android:textSize="16sp"
                        android:textColor="#FFFF"
                        android:padding="6dp"
                        android:fontFamily="monospace"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="15dp"
                    >

                    <TextView
                        android:id="@+id/timeID"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:text="Time"
                        android:textSize="18sp"
                        android:textColor="#FFFF"
                        android:textStyle="bold"
                        android:padding="6dp"
                        android:fontFamily="monospace"
                        />

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:text="التوقيت :"
                        android:textSize="16sp"
                        android:textColor="#FFFF"
                        android:padding="6dp"
                        android:fontFamily="monospace"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="15dp"
                    >

                    <TextView
                        android:id="@+id/sourceID"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:text="اضغط هنا"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_red_light"
                        android:padding="6dp"
                        android:fontFamily="monospace"
                        android:gravity="center"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:text="المصدر  :"
                        android:textSize="16sp"
                        android:textColor="#FFFF"
                        android:padding="6dp"
                        android:fontFamily="monospace"

                        />

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>