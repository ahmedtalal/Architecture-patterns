<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FaqsActivity"
    android:orientation="vertical"
    android:background="@drawable/images"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/round_spladhscreen"
        android:alpha="0.8"
        >

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/faqsToolbar"
            app:title="FAQS"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            />

                <ExpandableListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/expandable_ID"
                    android:divider="@color/colorAccent"
                    android:dividerHeight="2dp"
                    android:background="@drawable/round_textsplash"
                    android:layout_margin="15dp"
                    android:indicatorLeft="?android:attr/expandableListPreferredChildIndicatorLeft"
                    android:layout_marginTop="20dp"
                    android:padding="20dp"
                    android:groupIndicator="@drawable/round_textsplash"
                    />

        <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expandable2_ID"
            android:divider="@color/colorAccent"
            android:dividerHeight="2dp"
            android:background="@drawable/round_textsplash"
            android:layout_margin="15dp"
            android:indicatorLeft="?android:attr/expandableListPreferredChildIndicatorLeft"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:groupIndicator="@drawable/round_textsplash"
            />
        <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expandable3_ID"
            android:divider="@color/colorAccent"
            android:dividerHeight="2dp"
            android:background="@drawable/round_textsplash"
            android:layout_margin="15dp"
            android:indicatorLeft="?android:attr/expandableListPreferredChildIndicatorLeft"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:groupIndicator="@drawable/round_textsplash"
            />

    </LinearLayout>

</LinearLayout>